<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="16"
    android:orientation="vertical">
    <include
        android:id="@+id/e_register_title"
        style="@style/TitleStyle"
        layout="@layout/e_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:layout_weight="1.6"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="手机号"/>
        <EditText
            android:maxLength="11"
            android:ems="1"
            android:inputType="number"
            android:id="@+id/phone_num"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="14dp"
            android:textColorHint="#BDBDBD"
            android:hint="请输入你的手机号码"
            />
    </LinearLayout>
    <TextView style="@style/halving_line_e"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:layout_weight="1.6"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="短信验证码"/>
        <EditText
            android:ems="1"
            android:maxLength="8"
            android:id="@+id/auth_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColorHint="#BDBDBD"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/get_code"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:padding="6dp"
            android:background="@drawable/select_get_phone_code"
            android:gravity="center"
            android:text="获取验证码"/>
    </LinearLayout>
    <TextView style="@style/halving_line_e"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:layout_weight="1.6"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="密码"/>
        <EditText
            android:ems="1"
            android:id="@+id/register_password"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="14dp"
            android:password="true"
            android:textColorHint="#BDBDBD"
            android:hint="至少6位"/>
    </LinearLayout>
    <TextView style="@style/halving_line_e"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_weight="1.3">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/register_submit"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:background="@drawable/select_log_button"
            android:layout_height="match_parent"
            android:text="注册"
            android:textSize="18dp"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>
