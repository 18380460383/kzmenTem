<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write">
        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/left_right_retract_small"
            android:src="@drawable/in_opt_cancel"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@+id/close_dialog"
        android:paddingBottom="16dp">
        <TextView
            android:id="@+id/text_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发了啥地方后排的覅卷水平对哦就覅破"
            android:textSize="16dp"
            android:padding="18dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/ok_dialog"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="确定"
            android:textSize="16dp"
            android:background="@drawable/selector_e_tv_login"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
