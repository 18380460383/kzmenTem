<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="16"
    android:orientation="vertical">
    <include
        android:id="@+id/shop_details_title"
        layout="@layout/e_title"
        style="@style/TitleStyle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth"
        android:background="#ffffff">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/shop_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/shop_detail_rl"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="150dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/shop_details_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <com.kzmen.sczxjf.view.PointListView
                    android:id="@+id/shop_details_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shaop_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="17dp"
                    android:ellipsize="end"
                    android:lines="2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                    android:id="@+id/tv_integral"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/h_money"/>
                    <TextView
                        android:id="@+id/shop_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#d15018"
                        android:layout_toRightOf="@+id/tv_integral"
                        android:textSize="18dp"/>
                    <ImageView
                        android:id="@+id/shop_price_image"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_toRightOf="@+id/shop_integral"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/h_feng"/>
                    <TextView
                        android:id="@+id/shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/shop_price_image"
                        android:layout_centerVertical="true"
                        android:textColor="#d15018"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/shop_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/shop_num"
                        android:text="剩余："/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#8e8c8c"/>
            <WebView
                android:id="@+id/shop_details_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#8e8c8c"/>
            <Button
                android:id="@+id/shop_details_submit"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/select_log_button"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="立即兑换"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
