<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cp="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp">
    <com.kzmen.sczxjf.control.CircularProgress
        android:id="@+id/cp_loginactivity_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        cp:circular_progress_border_width="3dp"
        cp:circular_progress_color="@color/no1_bule_light" />

    <TextView
        android:id="@+id/text_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cp_loginactivity_progress"
        />

</LinearLayout>