<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <com.kzmen.sczxjf.view.MyListView
                android:id="@+id/lv_play_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent"
                android:dividerHeight="0dp" />

            <LinearLayout
                android:id="@+id/ll_xiaojiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingLeft="@dimen/margin_top10"
                    android:id="@+id/tv_xiaoj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小讲圈"
                    android:textStyle="bold" />

                <com.kzmen.sczxjf.view.MyListView
                    android:id="@+id/lv_xiaojiang_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparent"
                    android:dividerHeight="0dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top30"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="取消"
        android:textSize="16sp" />
</RelativeLayout>
