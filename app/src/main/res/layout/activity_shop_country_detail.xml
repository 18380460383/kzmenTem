<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kzmen.sczxjf.ui.activity.kzmessage.UpdateNickNameAcitivy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/kz_title" />
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_marginRight="@dimen/margin_top10"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.kzmen.sczxjf.view.DJEditText
        android:id="@+id/et_input"
        android:paddingLeft="@dimen/margin_top30"
        android:paddingRight="@dimen/margin_top30"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="40dp"
        android:hint="请输入详细街道，门牌号码"
        style="?android:attr/textViewStyle"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4-16个字符，仅支持中文、英文大小写、数字、下划线、减号及其组合。"/>
</LinearLayout>
