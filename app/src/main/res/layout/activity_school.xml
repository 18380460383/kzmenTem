<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="16">

    <include
        android:id="@+id/school_title"
        style="@style/TitleStyle"
        layout="@layout/e_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/into_school"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学 校："
                android:layout_marginLeft="8dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/school_into"
                android:layout_width="20dp"
                android:layout_centerVertical="true"
                style="@style/into_image_style" />

            <TextView
                android:id="@+id/school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/school_into"
                android:layout_centerVertical="true"
                android:textSize="15dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系 别："
                android:layout_marginLeft="8dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/school_xi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请填写系别"
                android:layout_centerVertical="true"

                android:textColorHint="#9e9999"
                android:textSize="15dp" />

            <TextView style="@style/halving_line_e" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专 业："
                android:layout_marginLeft="8dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/school_zhuany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请填写专业"
                android:layout_centerVertical="true"

                android:textColorHint="#9e9999"
                android:textSize="15dp" />

            <TextView style="@style/halving_line_e" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年 级："
                android:layout_marginLeft="8dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/school_nianj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请填写年级"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:textColorHint="#9e9999"
                android:textSize="15dp" />

            <TextView style="@style/halving_line_e" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班 级："
                android:layout_marginLeft="8dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/school_banj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请填写班级"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:textColorHint="#9e9999"
                android:textSize="15dp" />

            <TextView style="@style/halving_line_e" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <Button
                android:id="@+id/school_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/select_log_button"
                android:text="确 定"
                android:textSize="18dp"
                android:textColor="#ffffff"
                app:layout_widthPercent="70%" />
        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>
</LinearLayout>
